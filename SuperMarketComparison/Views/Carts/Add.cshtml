@model SuperMarketComparison.Models.CartItem

@{
    ViewData["Title"] = "Add";
}

<h3>Add Item</h3>
<p class="text-muted">
    Can't find the Item you are looking for? Try <a class="btn btn-sm btn-primary" asp-controller="Items" asp-action="Create">New Item</a>
</p>

<form asp-action="Add" method="post">
    <div class="form-group col-6">
        <label for="ItemId">Item</label>
        <select name="itemId" class="form-select" asp-items="ViewBag.ItemList" required>
            <option value="">-- Select Item --</option>
        </select>
    </div>

    <div class="mt-2">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-controller="Carts" asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>
