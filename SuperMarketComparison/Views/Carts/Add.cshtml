@model SuperMarketComparison.Models.Cart

@{
    ViewData["Title"] = "Add";
}

<h3>Add Item</h3>

<form>
    <div class="form-group col-6">
        <label for="ItemId">Item</label>
        <select name="itemId" class="form-control" asp-items="ViewBag.ItemList">
            <option value="">-- Select Item --</option>
        </select>
    </div>

    <div class="mt-2">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-controller="Carts" asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>
