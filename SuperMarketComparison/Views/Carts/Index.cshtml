@model List<SuperMarketComparison.Models.Cart>

@{
    ViewData["Title"] = "Index";
}

<h3>
    <i class="fa-solid fa-cart-shopping"></i> My Carts
    <form asp-controller="Carts" asp-action="Create" method="post" style="display:inline" onsubmit="return confirm('Are you sure you want to Create a new Cart');" ">
        <button type="submit" class="btn btn-primary" >
            <i class="fa-solid fa-plus text-white"></i>
        </button>
    </form>
</h3>

<table class="table">
    <thead>
        <tr>
            <th>Cart ID</th>
            <th>Cart Created</th>
            <th>Cart Completed</th>
            <th>Mark Bought</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CreatedAt.ToString("dd-MM-yyyy")</td>
                <td>@(item.CompletedAt.HasValue
                        ? item.CompletedAt.Value.ToString("dd-MM-yyyy")
                        : "-"
                    )
                </td>
                <td>
                    @if (!item.CompletedAt.HasValue)
                    {
                        <form asp-action="MarkAsBought" method="post" style="display:inline" asp-route-id="@item.Id" onsubmit="return confirm('Are you sure you want Mark this cart as Bought?');">
                            <input type="submit" class="btn btn-sm btn-primary" value="Bought" />
                        </form>
                    }
                    else
                    {
                        <span class="text-success"><i class="fa-solid fa-square-check fa-2x"></i></span>
                    }
                </td>
                <td class="text-end">
                    <a class="btn btn-sm btn-info text-light" asp-action="Details" asp-route-id="@item.Id">Edit</a>
                    <form asp-action="DeleteCart" method="post" style="display:inline" asp-route-id="@item.Id" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="submit" class="btn btn-sm btn-danger" value="Delete" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>