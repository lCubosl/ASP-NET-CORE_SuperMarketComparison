@model SuperMarketComparison.Models.ItemStorePrice

@{
    ViewData["Title"] = "Update";
}

<h3>Update Price for item</h3>

<p class="text-secondary">
    This action will CREATE a new instance of the item price for the item with the current date. <br />
    If the store updated the item price, please select this option.
</p>

<div class="mt-2">
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-controller="Items" asp-action="Details" asp-route-id="@Model.ItemId" class="btn btn-secondary">Back</a>
</div>