@model SuperMarketComparison.Models.Item

@{
    ViewData["Title"] = "Details";
}

@{
    var minPrice = Model.Prices.Min(p => (decimal?)p.Price);
    var maxPrice = Model.Prices.Max(p => (decimal?)p.Price);
}

<h3>
    @Model.Name 
    <a class="btn btn-primary fw-bolder" asp-controller="ItemStorePrices" asp-action="Create" asp-route-id="@Model.Id">
        <i class="fa-solid fa-plus text-white"></i>
    </a>
</h3>

<table class="table">
    <thead>
        <tr>
            <th>Store</th>
            <th>Price</th>
            <th>Last Update</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model.Prices)
        {
            string rowClass = "";

            if(item.Price == minPrice)
            {
                rowClass = "table-success";
            }
            else if (item.Price == maxPrice)
            {
                rowClass = "table-danger";
            }

            <tr class="@rowClass">
                <td>@item.Store.Name</td>
                <td>@item.Price.ToString("N2") €</td>
                <td>@item.LastUpdate.ToString("dd-MM-yyyy")</td>
                <td class="text-end">
                    @* Update buttons and add functionality to them *@
                    <a asp-controller="ItemStorePrices" asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Update</a>
                    <a asp-controller="ItemStorePrices" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info text-light">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                    <a asp-controller="ItemStorePrices" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-2">
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>