@model List<SuperMarketComparison.Models.Store>

@{
    ViewData["Title"] = "Index";
}

<h3>
    <i class="fa-solid fa-store"></i> 
    Stores 
    <a class="btn btn-success fw-bolder" asp-controller="Stores" asp-action="Create">
        <i class="fa-solid fa-plus text-white"></i>
    </a>
</h3>
<form asp-controller="Stores" asp-action="Index" method="get">
    <input style="width:80%; float:left; background:transparent; border-radius:0px" type="text" name="searchString" class="form-control" />
    <button class="bg-primary" style="width:20%; float:left; border:none; height:40px" type="submit">
        <i class="fa fa-search text-white"></i>
    </button>
</form>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Location</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-info text-light" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>